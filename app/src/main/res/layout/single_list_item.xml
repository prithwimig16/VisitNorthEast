<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#ffffff"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/img_show_list"
            android:layout_width="350dp"
            android:layout_height="200sp"
            android:scaleType="centerCrop"
            android:src="@drawable/no_image_available" />

        <TextView
            android:id="@+id/tv_img_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_city_info"
            android:layout_alignParentStart="true"
            android:background="#90000000"
            android:padding="10dp"
            android:text="New Delhi in One Day Top Attractions"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_city_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_show_list"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="fsfsdvnsdnvlnsdnvdsnkvndsnvndsn dn nnk nkn n knkn nd nn nncnjndcndsjnjndsjndsjn "
            android:textSize="12sp" />

        <Button
            android:id="@+id/bt_see_plan"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_below="@+id/tv_city_info"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:background="@color/colorPrimaryDark"
            android:text="See Plan"
            android:textAllCaps="false"
            android:textColor="#ffffff" />

    </RelativeLayout>

</RelativeLayout>