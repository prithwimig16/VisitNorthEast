<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="prithwimig16.visitnortheast.activities.CityListActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/d_toolbar_city_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4682B4"
        android:minHeight="?attr/actionBarSize">

        <prithwimig16.visitnortheast.utils.CustomTitleTextView
            android:id="@+id/tv_title_city_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/home_tag"
            android:textColor="@android:color/background_light"
            android:textSize="20dp" />
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/d_toolbar_city_list"
        android:padding="10dp">

        <GridView
            android:id="@+id/gridview_city_activity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:columnWidth="125dp"
            android:horizontalSpacing="5dp"
            android:numColumns="2"
            android:scrollbars="vertical"
            android:verticalSpacing="5dp"
            android:visibility="visible">
        </GridView>
    </RelativeLayout>


</LinearLayout>
